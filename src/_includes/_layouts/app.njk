<div class="app-layout">  
  <aside class="app-layout__gems" id="gems">
    {% include "src/_includes/gems.njk" %}
  </aside>

  <aside class="app-layout__sidebar-left" id="sidebar-left" aria-hidden="true" sidebar-size="regular">
    <button class="app-layout__sidebar-left-trigger button" unstyled data-color="white"><span class="icon" trigger-target="sidebar-left"></span></button>
    {% include "src/_includes/sidebar-left.njk" %}
  </aside>

  <div class="app-layout__cdm">
    {% include "src/_includes/main-nav.njk" %}
  </div>

  <main class="app-layout__main bg-secondary">
    {{ content | safe }}

    
  </main>

  <aside class="app-layout__sidebar-right" id="sidebar-right" aria-hidden="{{ doca_hidden | default('true') }}">
    {% include "src/_includes/sidebar-right.njk" %}
  </aside>

</div>

